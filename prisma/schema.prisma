generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Players {
  id        Int       @id @default(autoincrement())
  sessionId Int?
  name      String?   @db.VarChar(50)
  role      Int?
  score     Int?
  gameData  String?   @db.Text
  Session   Sessions? @relation(fields: [sessionId], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "Players_ibfk_1")

  @@index([sessionId], map: "sessionId")
}

model Sessions {
  id            Int        @id @default(autoincrement())
  code          String     @db.VarChar(10)
  playersNumber Int
  createdAt     DateTime?  @default(now()) @db.DateTime(0)
  status        Int?
  questions     Int?
  killerId      Int?
  Players       Players[]
  Suspects      Suspects[]
}

model Suspects {
  id          Int       @id @default(autoincrement())
  sessionId   Int?
  name        String?   @db.VarChar(25)
  description String?   @db.Text
  hints       String?   @db.Text
  Session     Sessions? @relation(fields: [sessionId], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "Suspects_ibfk_1")

  @@index([sessionId], map: "sessionId")
}
